<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="mt-3">Bienvenido/a</h3>
                    {{#if user.foto}}
                    <img src="/img/profiles/{{user.foto}}" class="mt-3 rounded-circle" width="100" height="100" alt="perfil">
                    {{else}}
                    <img src="https://i.ibb.co/sy5YrsX/user.png" class="mt-3 rounded-circle" width="100" height="100" alt="perfil">
                    {{/if}}
                    <br>
                    <h6 class="mt-2">
                    {{user.ad}}
                    </h6>
                    <h6 class="text-success">{{user.rol}}</h6>
                    <div class="card-body">
                       
                    </div>
                    {{#if user.Administrador}}
                        <a href="links/profile/admin/modify" class="btn btn btn-outline-primary mt-3">
                            Editar perfil
                        </a>
                    {{else}}
                    {{/if}}
                    <a href="links/profile/modify" class="btn btn btn-outline-primary mt-3">
                        Modificar Contraseña
                    </a>
                    <a href="/logout" class="btn btn-danger mt-3">
                        Cerrar sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/sockets/signup/sockets.js"></script>
<script>
    var fechaOriginal = '{{user.fechaNacimiento}}';
    var fecha = new Date(fechaOriginal);
    var fechaFormateada = fecha.toLocaleDateString('es-ES');
    //console.log(fechaFormateada);
    document.getElementById('fechaNa').innerHTML += fechaFormateada
</script>